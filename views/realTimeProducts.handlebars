<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Real-Time Products</title>
</head>
<body>
    <h1>Real-Time Products</h1>
    
    <form id="productForm">
        <label for="productName">Product Name:</label>
        <input type="text" id="productName" name="productName" required>
        <br>
        <label for="productPrice">Product Price:</label>
        <input type="number" id="productPrice" name="productPrice" required>
        <br>
        <button type="submit">Add Product</button>
    </form>

    <ul id="productList">
        <!-- List of products will be dynamically updated here -->
    </ul>

    <script>
        const socket = io(); // Initialize Socket.io connection

        // Handle form submission
        document.getElementById('productForm').addEventListener('submit', function(event) {
            event.preventDefault(); // Prevent default form submission

            const productName = document.getElementById('productName').value;
            const productPrice = document.getElementById('productPrice').value;

            // Emit WebSocket event to add a new product
            socket.emit('addProduct', { name: productName, price: productPrice });

            // Clear form fields
            document.getElementById('productName').value = '';
            document.getElementById('productPrice').value = '';
        });

        // Listen for WebSocket events to update product list
        socket.on('updateProductList', function(products) {
            const productList = document.getElementById('productList');
            productList.innerHTML = ''; // Clear existing list

            products.forEach(function(product) {
                const listItem = document.createElement('li');
                listItem.textContent = `${product.name}: $${product.price}`;
                productList.appendChild(listItem);
            });
        });
    </script>
</body>
</html>
